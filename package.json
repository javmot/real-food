{
  "name": "@real-food/monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "yarn theme-build && lerna run dev --parallel",
    "lint": "lerna run lint --parallel",
    "styleguide": "yarn workspace @real-food/theme styleguide",
    "theme-build": "yarn workspace @real-food/theme build"
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "lerna": "^3.21.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lerna run pre-commit"
    }
  }
}
